
<div id="app">
    <h1 class="bg-light text-center">{{pageTitle}}</h1>
    <hr />
    <div v-if="error" class="alert alert-danger" role="alert">
        <p v-for="error in userMessage">
            <span v-for="error in error.Name"><br />{{error}} </span>
            <span v-for="error in error.City"><br />{{error}} </span>
            <span v-for="error in error.Postal"><br />{{error}} </span>
        </p>
    </div>
    <div v-if="success" class="alert alert-success" role="alert">
        {{userMessage}}
    </div>
    <form v-on:submit.prevent="addLocation" class="col col-lg-5 mx-auto">
        <div class="form-group">
            <label>Name</label>
            <input v-model="locationModel.name" class="form-control">
        </div>
        <div class="form-group">
            <label>postal</label>
            <input v-model="locationModel.postal" class="form-control">
        </div>
        <div class="form-group">
            <label>city</label>
            <input v-model="locationModel.city" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script src="~/js/Location/AddLocation.js"></script>
