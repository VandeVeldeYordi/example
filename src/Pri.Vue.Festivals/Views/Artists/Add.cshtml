<div id="app">
    <h1 class="bg-light text-center">{{pageTitle}}</h1>
    <hr />
    <div v-if="error" class="alert alert-danger" role="alert">
        <p v-for="error in userMessage">
            <span v-for="error in error.Name"><br />{{error}} </span>
            <span v-for="error in error.GenreId"><br />{{error}} </span>
            <span v-for="error in error.Image"><br />{{error}} </span>

        </p>
    </div>
    <div v-if="success" class="alert alert-success" role="alert">
        {{userMessage}}
    </div>
    <form v-on:submit.prevent="addArtist" enctype="multipart/form-data" class="col col-lg-5 mx-auto">
        <div class="form-group">
            <label>Name</label>
            <input v-model="artistModel.name" class="form-control">
        </div>
        <div class="form-group">
            <label>Genre</label>
            <select v-model="artistModel.genreId" class="form-control">
                <option v-for="genre in genres" v-bind:value="genre.id">
                    {{genre.name}}
                </option>
            </select>
        </div>
        <div class="form-group">
            <span v-for="festival in festivals">
                <label>{{festival.name}}</label>
                <input type="checkbox" v-bind:value="festival.id"
                       v-model="artistModel.checkedFestivals" class="form-check-inline">
            </span>
        </div>
        <div class="form-group">
            <label>Image</label>
            <input ref="image" type="file" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script src="~/js/Artists/addArtist.js"></script>