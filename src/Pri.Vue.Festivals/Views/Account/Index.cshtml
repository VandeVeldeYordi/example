<div id="app">
    <h1 class="bg-light text-center">{{pageTitle}}</h1>
    <hr />
    <div v-if="error" class="alert alert-danger" role="alert">
        <p v-for="error in userMessage">
            <span v-for="error in error.Password">{{error}}</span>
            <span v-for="error in error.Username"><br />{{error}} </span>
        </p>
    </div>
    <div v-if="success" class="alert alert-success" role="alert">
        {{userMessage}}
    </div>
    <form v-on:submit.prevent="logIn">
        <div class="form-group">
            <label>Username:</label>
            <input v-model="loginModel.username" class="form-control">

        </div>
        <div class="form-group">
            <label>Password:</label>
            <input v-model="loginModel.password" type="password" class="form-control">

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div v-if="loading" class="spinner-border text-primary col-3 mx-auto" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<script src="~/js/Account/login.js"></script>

