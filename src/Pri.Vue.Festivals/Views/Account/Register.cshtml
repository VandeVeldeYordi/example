<div id="app">
    <h1 class="bg-light text-center">{{pageTitle}}</h1>
    <hr />
    <div v-if="error" class="alert alert-danger" role="alert">
        <p v-for="error in userMessage">
            <span v-for="error in error.Password"><br />{{error}} </span>
            <span v-for="error in error.City"><br />{{error}} </span>
            <span v-for="error in error.Addressline"><br />{{error}} </span>
            <span v-for="error in error.RepeatPassword"><br />{{error}} </span>
            <span v-for="error in error.Username"><br />{{error}} </span>
            <span v-for="error in error.PostalCode"><br />{{error}} </span>
        </p>
    </div>
    <div v-if="success" class="alert alert-success" role="alert">
        {{userMessage}}
    </div>

    <form v-on:submit.prevent="register" class="col col-lg-5 mx-auto">
        <div class="form-group">
            <label >date of birth:</label>
            <input v-model="registerModel.dateOfBirth" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label>email/username</label>
            <input v-model="registerModel.username" class="form-control" />
        </div>
        <div class="form-group">
            <label>password</label>
            <input v-model="registerModel.password" type="password" class="form-control" />
        </div>
        <div class="form-group">
            <label>repeat password</label>
            <input v-model="registerModel.repeatPassword" type="password" class="form-control" />
        </div>
        <div class="form-group">
            <label>first name</label>
            <input v-model="registerModel.firstName" class="form-control" />
        </div>
        <div class="form-group">
            <label>last name</label>
            <input v-model="registerModel.lastName" class="form-control" />
        </div>
        <div class="form-group">
            <label>city</label>
            <input v-model="registerModel.city" class="form-control" />
        </div>
        <div class="form-group">
            <label>addressLine</label>
            <input v-model="registerModel.addressLine" class="form-control" />
        </div>
        <div class="form-group">
            <label>postal code</label>
            <input v-model="registerModel.postalCode" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script src="~/js/Account/Register.js"></script>
   