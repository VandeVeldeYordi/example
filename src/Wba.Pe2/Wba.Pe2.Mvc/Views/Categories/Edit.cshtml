@model CategoryDetailsViewModel

<h2>@ViewBag.Action Category</h2>

<form asp-controller="Categories" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class = "form-control" asp-for="Name" value ="@Model.Name"/><br />
        <span class="text-danger" asp-validation-for=Name></span>
    </div>

    <button type ="submit" class = "btn btn-primary">Save</button>
    <a asp-action="index" class="btn btn-warning">Cancel</a>
</form>