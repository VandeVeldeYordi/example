@model GameIndexViewModel

@{
    ViewBag.Title = "Games";
}
<h1 class="display-3-text-center">Games </h1>

<div class="container row">
    @foreach (var games in Model.Games
       .OrderBy(p => p.Name))
    {
        <div class="mt-2 col-md-4 border-dark card">
            <div class="text-center border-bottom border-dark">
                <h4>
                    <a class="list-group-item"
                       asp-action="Details"                   
                       asp-route-id="@games.Id">@games.Name </a>
                </h4>
            </div>
            <div>
                <div class="col-md-8">
                    <img asp-append-version="true" src="/images/games/@games.ImagePath" alt="game" height="150px" />
                </div>            
            </div>              
            <div class="card-footer " style="font-size:15px; ">
                <b>€ @games.Price</b><br>
                  <a asp-action="Details" asp-route-id="@games.Id" class="btn btn-primary">order</a>
            </div>              
              
        </div>
    }
</div>

<hr />
<div>
    <a asp-controller="Games"
       asp-action="Add"
       class="btn btn-outline-primary">Add a Game</a>
</div>

