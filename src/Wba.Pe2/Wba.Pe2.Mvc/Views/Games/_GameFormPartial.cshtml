@model GamesUpdateViewModel

<div class="form-group">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control">
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ReleaseDate"></label>
    <input asp-for="ReleaseDate" class="form-control">
    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control">
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DeveloperId"></label>
    <select class="form-control" asp-for="DeveloperId" asp-items="@Model.Developers"></select>
</div>
<div class="form-group">
    <label asp-for="CategoryId"></label>
    <select class="form-control" asp-for="CategoryId" asp-items="@Model.Category"></select>
</div>


<div class="form-group">
    @for (int i = 0; i < Model.Characters.Count; i++)
    {
        <label>@Model.Characters[i].Text</label>
        <input asp-for="@Model.Characters[i].IsSelected" />
        <input asp-for="@Model.Characters[i].Id" />
        <input asp-for="@Model.Characters[i].Text" />
    }
</div>
<div class="form-group">
    @for (int i = 0; i < Model.Properties.Count; i++)
    {
        <label>@Model.Properties[i].Text</label>
        <input asp-for="@Model.Properties[i].IsSelected" />
        <input asp-for="@Model.Properties[i].Id" />
        <input asp-for="@Model.Properties[i].Text" />
    }
</div>
<div class="form-group">
    @for (int i = 0; i < Model.Platforms.Count; i++)
    {
        <label>@Model.Platforms[i].Text</label>
        <input asp-for="@Model.Platforms[i].IsSelected" />
        <input asp-for="@Model.Platforms[i].Id" />
        <input asp-for="@Model.Platforms[i].Text" />
    }
</div>
<div class="form-group">
    <label asp-for="Image"></label>
    <input asp-for="Image" class="form-control">
    <span asp-validation-for="Image" class="text-danger"></span>
</div>
